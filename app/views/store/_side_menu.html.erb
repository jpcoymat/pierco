<div class="panel-group" id="accordion">
	<% @company.product_categories.each do |pc| %>
    <div class="panel panel-default">
    	<div class="panel-heading">
        	<h4 class="panel-title">
            	<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= pc.id.to_s%>"><span class="glyphicon glyphicon-folder-close"></span><%= pc.name %></a>
            </h4>
        </div>
        <div id="collapse<%= pc.id.to_s%>" class="panel-collapse collapse">
        	<ul class="list-group">
			<% pc.product_subcategories.each do |psub| %>
            	<li class="list-group-item"><%= link_to(psub.name, products_path(product_subcat: psub.id)) %></li>
			<% end %>
            </ul>
        </div>
    </div>
	<% end %>
</div>

<script type="text/javascript">
<% if @product_subcategory %>
  $("#collapse<%= @product_subcategory.product_category.id.to_s%>").addClass("in") 
<% else %>
  $("#collapse<%= @company.product_categories.first.id.to_s%>").addClass("in")
<% end %>

</script>
