<div class="panel-group" id="accordion">
	<% @company.suppliers.each do |supplier| %>
	<div class="panel panel-default">
    		<div class="panel-heading">
        		<h4 class="panel-title">
            			<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= supplier.id.to_s%>"><span class="glyphicon glyphicon-folder-close"></span><%= supplier.name %></a>
            		</h4>
        	</div>
        	<div id="collapse<%= supplier.id.to_s%>" class="panel-collapse collapse">
        		<ul class="list-group">
				<% @product_categories.each do |pcat| %>
				<% if Product.where(product_category_id: pcat.id, supplier_id: supplier.id).count > 0 %>
            			<li class="list-group-item"><%= link_to(pcat.name, products_path(product_category_id: pcat.id, supplier_id: supplier.id), remote: true) %></li>
				<% end %>
				<% end %>
            		</ul>
        	</div>
    	</div>
	<% end %>
</div>

<script type="text/javascript">

  $("#collapse<%= @supplier.id.to_s%>").addClass("in") 
</script>
