<div class="row">
	<div class="col-lg-12">
		<h3><%= @supplier.name + " > " + @product_category.name %></h3>
	</div>
</div>
<% @products.each_slice(3) do |slice| %>
<div class="row">
	<%slice.each do |product| %>
	<div class="col-lg-4 col-md-4 col-xs-6 portfolio-item text-center"> 
		<% unless product.product_picture.file == nil %>
		<%= link_to(image_tag(product.product_picture.thumb.url, height: 180), product_modal_path(product: product.id), remote: true) %>
		<% end %>
		
		<p><strong><%= product.supplier.name %></strong> <%= product.name %></p>
	</div>
	<% end%>
</div>
<% end %>
