<div class="row">
	<div class="col-lg-12">
		<h3><%=  @supplier.name + " - " + @product_category.name %></h3>
	</div>
</div>
<% @products.each_slice(3) do |slice| %>
<div class="card-deck">
  <%slice.each do |product| %>
  <div class="card"> 
    <%= image_tag(product.product_picture.try(:url),  class:"card-img-top rounded mx-auto d-block") %>
    <div class="card-body">
      <h5 class="card-title">
        <%= @supplier.name %>&nbsp;<%= link_to(product.name,product_modal_path(product: product.id), remote: true) %>
      </h5>
    </div>
  </div>
  <% end %>
</div>
<% end %>  

  