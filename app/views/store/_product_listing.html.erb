<div class="row">
	<div class="col-lg-12">
		<h3><%= @supplier.name + " > " + @product_category.name %></h3>
	</div>
</div>
<% @products.each_slice(3) do |slice| %>
<div class="card-deck-wrapper">
	<div class="card-deck">
		<%slice.each do |product| %>
		<div class="card"> 
			<% unless product.product_picture.file == nil %>
			<%= image_tag(product.product_picture.thumb.url,  class:"card-img-top rounded mx-auto d-block") %>
			<% end %>
			<div class="card-block">
				<h4 class="card-title">
					<%= product.supplier.name%>
				</h4>
				<p class="card-text"><%= link_to(product.name,product_modal_path(product: product.id), remote: true) %></p>
			</div>
		</div>
		<% end%>
	</div>
</div>
<% end %>
