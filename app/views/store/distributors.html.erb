<% content_for :title do %>
  Distribuidores - Pierco
<% end %>

<div class="dealers wrapper clearfix">
	<h2>Distribuidores</h2>
	<div class="dealer-cities">
		<% @company.distributor_cities.each do |city| %>
		<div class="city">
			<h2><%= city %></h2>
			<ul>
				<%= @company.distributor_by_city(city).each do |distributor|	%>
					<li>
						<h5><%= distributor.name										%>	</h5>
						<p><%= distributor.full_address									%>	</p>
						<p><%= distributor.telephones									%>	</p>
						<p><%= distributor.email.nil? ? "" : mail_to(distributor.email)	%>	</p>
					</li>
				<% end %>
			</ul>
		<% end %>
	<div class="sidebar-map">
		<div class="gmap">
			<img src="/images/gmap.png" alt="" />
		</div>
	</div><!--end class Sidebar-map-->
</div><!--end class wrapper-->