<div class="container">
	<div class="row">
        	<div class="col-sm-3 col-md-3">
			<%= render partial: "side_menu" %>
        	</div>
		<div class="col-sm-9 col-md-9" id="product_listing">
			<%= render partial: "product_listing" %>
		</div>
	</div>
</div>


<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>


<script type="text/javascript">

  function getModal(productId) {
    var url = "/product_modal?product=" + productId;
    $.get(url, function(data) {
      $('#productModal').html(data);
      $('#productModal').modal({});
      $('#productModal').show();
    }
    );
  }

</script>

