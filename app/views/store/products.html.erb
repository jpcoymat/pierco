<% content_for :stylesheets do %>
  	#header{
  		background:#000 url(/images/backgrounds/store-header-bg.jpg) no-repeat top;
		height:278px;
		margin-bottom:23px;
		position:relative;
	}
<% end %>

<div class="store wrapper general clearfix">
	<h2>Store</h2>
	<div class="store-cat">
		<div class="brand-products">
			<ul>
				<% @products.each do |product| %>
					<li><%= link_to image_tag(product.image_filename, :size => "160x144"), {:controller => 'store', :action => 'view_product', :product => product} %>
				<div>
					<p><strong><%= product.supplier.name %></strong> <%= product.name %></p>
				</div>
			</li>
			<% end %>
			</ul>
			<div class="brand-nav-bar">
				<ul class="nav-buttons">
					<%= will_paginate @products, class: 'apple_pagination', previous_label: "", next_label: "" %>
				</ul>
			</div><!--end class brand-nav-bar-->
		</div><!--end class brand-products-->
	</div><!--end class store-cat-->
	<%= render :partial => 'categories_menu'%>
</div><!--end class wrapper-->



