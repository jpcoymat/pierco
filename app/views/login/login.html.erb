<h1 class="text-xs-center">Pierco SAS</h1>
<%= form_for :user_login, url: login_login_path, html: {role: "form"} do |form| %>
<div class="form-group row">
  <%= form.label "Nombre Usuario", class: "col-md-4 col-lg-4 col-xl-4 form-control-label"		%>
  <div class="ccol-md-6 col-lg-6 col-xl-6">  
    <%= form.text_field :username, class: "form-control", placeholder: "Usuario"         %>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Contraseña", class: "ccol-md-4 col-lg-4 col-xl-4 form-control-label"		%>
  <div class="col-md-6 col-lg-6 col-xl-6">
    <%= form.password_field :password, class: "form-control",  placeholder: "Contraseña"    %>
  </div>
</div>		
<div class="form-group row" >
  <div class="offset-sm-4 col-md-6">
    <%= submit_tag "Ingresar", {class: "btn btn-lg btn-primary btn-block text-center"}   %>
  </div>
</div>
<% end %>

	
		
