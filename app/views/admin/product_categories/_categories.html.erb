<table class="table table-striped">
  <thead>
    <tr>
      <th>Categoria				</th>
      <th>Descripcion				</th>
    </tr>
  </thead>
  <tbody>
  <% @product_categories.each do |product_category| %>
    <tr>
      <td><%= link_to(product_category.name, admin_product_category_path(product_category), remote: true)			%>	</td>
      <td><%= product_category.description	%>	</td>
      <td><%= link_to "Subcategorias", admin_product_category_product_subcategories_path(product_category)	%>	</td>
      <td><%= link_to "Modificiar",edit_admin_product_category_path(product_category), remote: true		%>	</td>
      <td><%= product_category.deleteable? ? button_to("Eliminar", admin_product_category_path(product_category), method: :delete, class: "btn btn-danger") : "" %></td>
    </tr>
  <% end %>
  </tbody>
</table>