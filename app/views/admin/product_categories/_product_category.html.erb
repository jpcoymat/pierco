<div class="form-group">
  <%= form.label "Nombre Categoria", class: "col-sm-2 control-label" %>	
  <div class="col-xs-4">
    <%= form.text_field	:name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= form.label "Descripcion", class: "col-sm-2 control-label" %>
  <div class="col-xs-4">
    <%= form.text_field	:description, class: "form-control"	%>
  </div>	
</div>
<% ProductDimension.dimension_attributes.each do |attrbt| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Maneja <%= ProductDimension.attribute_dictionary[attrbt] %> </label>
    <div class="col-xs-4">
      <%= form.check_box attrbt.to_sym, class: "form-control" %>
    </div>
  </div>
<% end %>	

