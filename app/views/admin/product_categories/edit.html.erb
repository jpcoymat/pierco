<h1>Modificar Categoria de Producto </h1>

<% if @product_category.errors.any? %>
	<div id="error_explanation">
		<h2>Hay <%= @product_category.errors.count.to_s %> error(es) con este categoria :</h2>
			<ul>
				<% @product_category.errors.each do |key,value| %>
  					<li><%= value %></li>
					<% end %>
			</ul>
	</div>
<% end %>


	<%= form_for [:admin, @product_category], html: {class: "form-horizontal"} do |form|	%>
		<%= form.hidden_field :id	%>
		<%= render :partial => 'product_category', :locals => {:form => form}	%>
		<%= submit_tag "Actualizar",  {class: "btn btn-primary"}		%>
	<% end %>
        <br \><br \>
	<%= link_to "Regreso", admin_product_categories_path %>
