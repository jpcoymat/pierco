<div id="error_explanation"></div>

<%= form_for [:admin, @product_category], html: {class: "form-horizontal"}, remote: true do |form|	%>
<%= form.hidden_field :company_id, value: session[:company_id]	%>
<div class="form-group row">
  <%= form.label "Nombre Categoria", class: "col-4 col-form-label" %>	
  <div class="col-8">
    <%= form.text_field	:name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Descripcion", class: "col-4 col-form-label" %>
  <div class="col-8">
    <%= form.text_field	:description, class: "form-control"	%>
  </div>	
</div>
<% ProductDimension.dimension_attributes.each do |attrbt| %>
<div class="form-group row">
  <label class="col-4 col-form-label">Maneja <%= ProductDimension.attribute_dictionary[attrbt] %> </label>
  <div class="col-8">
    <%= form.check_box attrbt.to_sym, class: "form-control" %>
  </div>
</div>
<% end %>	
<%= submit_tag "Actualizar",  {class: "btn btn-primary"}		%>

<% end %>

