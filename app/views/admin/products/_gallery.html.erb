<div class="title-control">
	<div class="row">
		<div class="col-md-10">
			<h2>Imagenes de Producto </h2>
		</div>
		<div class="col-md-2">
			<%= link_to "Agregar", new_admin_product_product_photo_path(@product), remote: true, class: "btn btn-primary"	%>
		</div>
	</div>
</div>
<div class="container">
<% if @product.product_photos.empty? %>
	<p>No hay imagenes para este producto.</p>
<% else %>
	<div id="gallery-carousel" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators" id="indicators">
			<% @product.product_photos.each do |photo| %>
			<li data-target="#gallery-carousel" data-slide-to="<%= @product.product_photos.to_a.index(photo).to_s %>"</li>
			<% end %>
		</ol>
		<div class="carousel-inner" role="listbox">
			<% @product.product_photos.each do |photo| %>
			<div class="carousel-item" id="entry-<%= @product.product_photos.to_a.index(photo).to_s %>">
				<%= image_tag photo.product_photograph.url %>
			</div>
			<% end %>
		</div>
		<a class="left carousel-control" href="#gallery-carousel" role="button" data-slide="prev">
			<span class="icon-prev" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#gallery-carousel" role="button" data-slide="next">
			<span class="icon-next" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>

	<script type="text/javascript">
	$("#indicators li:first").addClass("active");
	$("#entry-0").addClass("active");
	</script>

<% end %>

</div>
