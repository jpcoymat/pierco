<div class="form-group row">
  <%= form.label "Nombre", class: "col-xs-2 col-form-label"	%>
  <div class="col-xs-10">
     <%= form.text_field :name	, class: "form-control"%>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Marca", class: "col-xs-2 col-form-label"		%>
  <div class="col-xs-10">  
    <%= form.select :supplier_id, @suppliers.collect {|s| [s.name,s.id]}, class: "form-control"%>	
  </div>
</div>
<div class="form-group row">
  <%= form.label "Categoria", class: "col-xs-2 col-form-label"	%>
  <div class="col-xs-10">
    <%= form.select :product_category_id, @product_categories.collect {|pc| [pc.name, pc.id]}, class: "form-control"%>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Archivo Imagen", class: "col-xs-2 col-form-label"	%>
  <div class="col-xs-10">
    <%= form.file_field	:product_picture, class: "form-control"	%>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Descripcion"	, class: "col-xs-2 col-form-label"%>
  <div class="col-xs-10">
    <%= form.text_area :description, cols: 40, rows: 5, class: "form-control"		%>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Activo?", class: "col-xs-2 col-form-label"	%>
  <div class="col-xs-10">
    <%= form.check_box :active, class: "form-control"%>
  </div>
</div>