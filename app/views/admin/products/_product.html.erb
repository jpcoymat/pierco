<div class="form-group">
  <%= form.label "Nombre"	%>
  <div class="col-xs-4">
     <%= form.text_field :name		%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Marca"		%>
  <div class="col-xs-4">  
    <%= form.select :supplier_id, @suppliers.collect {|s| [s.name,s.id]}	%>	
  </div>
</div>
<div class="form-group">
  <%= form.label "Categoria"	%>
  <div class="col-xs-4">
    <%= form.select :product_category_id, @product_categories.collect {|pc| [pc.name, pc.id]},  prompt: 'Seleccione la categoria'%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Subcategoria"	%>
  <div class="col-xs-4", id = "product_subcategory_field">  
    <%= form.select :product_subcategory_id, @product_subcategories.collect {|ps| [ps.name,ps.id]}, prompt: 'Seleccione la subcategoria'	%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Archivo Imagen"				%>
  <div class="col-xs-4">
    <%= form.file_field	:image_file					%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Descripcion"				%>
  <div class="col-xs-4">
    <%= form.text_area :description, :cols => 40, :rows => 5		%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Activo?"					%>
  <div class="col-xs-4">
    <%= form.check_box :active						%>
  </div>
</div>
