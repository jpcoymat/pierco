<table>
	<tr>
		<td>
			<%= form.label :name, "Nombre"			%>
		</td>
		<td>
			<%= form.text_field :name				%>
		</td>
	</tr>
	<tr>
		<td>	
			<%= form.label :supplier_id, "Marca"		%>
		</td>
		<td>
			<%= form.select :supplier_id, @suppliers.collect {|s| [s.name,s.id]}	%>	
		</td>
	</tr>
	<tr>
		<td>	
			<%= form.label :category_id, "Categoria"	%>
		</td>
		<td>
			<%= form.select :product_category_id, @product_categories.collect {|pc| [pc.name, pc.id]},  :prompt => 'Seleccione la categoria'%>
		</td>
	</tr>
	<tr id = "product_subcategory_field">
		<td>	
			<%= form.label :subcategory_id, "Subcategoria"	%>
		</td>
		<td>
			<%= form.select :product_subcategory_id, @product_subcategories.collect {|ps| [ps.name,ps.id]}, :prompt => 'Seleccione la subcategoria'	%>
		</td>
	</tr>	
	<tr>
		<td>
			<%= form.label :image_file, "Archivo Imagen"					%>
		</td>
		<td>
			<%= form.file_field	:image_file									%>
		</td>
	</tr>
	<tr>
		<td>
			<%= form.label :description, "Descripcion"						%>
		</td>
		<td>
			<%= form.text_area :description, :cols => 40, :rows => 5		%>
		</td>
	</tr>
	<tr>
		<td>
			<%= form.label :active, "Activo?"								%>
		</td>
		<td>
			<%= form.check_box :active										%>
		</td>	
	</tr>
</table>
