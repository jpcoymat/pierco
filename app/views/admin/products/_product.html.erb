<div class="form-group">
  <%= form.label "Nombre", class: "col-sm-2 control-label"	%>
  <div class="col-xs-4">
     <%= form.text_field :name	, class: "form-control"%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Marca", class: "col-sm-2 control-label"		%>
  <div class="col-xs-4">  
    <%= form.select :supplier_id, @suppliers.collect {|s| [s.name,s.id]}, class: "form-control"%>	
  </div>
</div>
<div class="form-group">
  <%= form.label "Categoria", class: "col-sm-2 control-label"	%>
  <div class="col-xs-4">
    <%= form.select :product_category_id, @product_categories.collect {|pc| [pc.name, pc.id]}, class: "form-control"%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Subcategoria", class: "col-sm-2 control-label"	%>
  <div class="col-xs-4">
    <%= form.select :product_subcategory_id, @product_subcategories.collect {|pc| [pc.name, pc.id]}, class: "form-control"%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Archivo Imagen", class: "col-sm-2 control-label"	%>
  <div class="col-xs-4">
    <%= form.file_field	:product_picture, class: "form-control"	%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Descripcion"	, class: "col-sm-2 control-label"%>
  <div class="col-xs-4">
    <%= form.text_area :description, cols: 40, rows: 5, class: "form-control"		%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Activo?", class: "col-sm-2 control-label"	%>
  <div class="col-xs-4">
    <%= form.check_box :active, class: "form-control"%>
  </div>
</div>
<script type="text/javascript">

var subcategories = [
  <%  @product_subcategories.each do |subcat| %>
    {"name": "<%= subcat.name %>", "id": <%= subcat.id %>, "product_category_id": <%= subcat.product_category_id %>}
    <% unless subcat == @product_subcategories.last %>
      ,
    <% end %>
  <% end %>
];


$('#product_product_category_id').change(function(){
	
	$("#product_product_subcategory_id").empty();
  var prodCat = $('#product_product_category_id').val();  
  for (var i = 0; i < subcategories.length; i++) {
	  subcat = subcategories[i];
    if (subcat["product_category_id"] == prodCat) {
	    $("#product_product_subcategory_id").append(new Option(subcat["name"],subcat["id"]));
    }
  }	
	
});

</script>