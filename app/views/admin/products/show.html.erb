<h1>Detalles Producto	</h1>

	<dl class="dl-horizontal">
		<dt>Nombre Producto     </dt>		<dd><%= @product.name				%>	</dd>
		<dt>Marca		</dt>		<dd><%= @product.supplier.name		%>	</dd>
		<dt>Categoria		</dt>		<dd><%= @product.product_category.try(:name) 	%>	</dd>
		<dt>Subcategoria	</dt>		<dd><%= @product.product_subcategory.try(:name)	%>	</dd>
		<dt>Imagen		</dt>		<dd><%= @product.image_filename.nil? ? "" : image_tag(@product.image_filename, :size => "100x100") %>	</dd>
		<dt>Descripcion		</dt>		<dd><%= @product.description			%>	</dd>
		<dt>Activo		</dt>		<dd><%= @product.active ? image_tag("check.png", :size => "30x30") : image_tag("x.png", :size => "30x30") %>	</dd>
	</dl>
	<p>
		<%= link_to "Modificar",edit_admin_product_path(@product)	%>	| 
		<%= link_to("Eliminar", admin_product_path(@product), method: :delete)%>
	</p>
	<h2>Dimensiones de Producto </h2>
	<% unless @product.product_dimensions.empty?%>
		<table  class="table table-striped">
			<tr><th>Dimension	</th>
				<% @product.product_category.active_dimension_fields.each do |active_field|	%>
					<th><%= ProductDimension.attribute_dictionary[active_field]%></th>
				<% end %>
			</tr>
			<% @product.product_dimensions.each do |product_dimension|	%>
				<tr><td><%= product_dimension.name		%>	</td>
					<% @product.product_category.active_dimension_fields.each do |active_field|	%>
						<td><%= product_dimension.attributes[active_field]	%></td>
					<% end %>
					<td><%= link_to("Modificar", edit_admin_product_product_dimension_path(@product, product_dimension)) %></td>
					<td><%= button_to("Eliminar", admin_product_product_dimension_path(@product, product_dimension), method: :delete)%>
				</tr>
			<% end %>
		</table>
	<% end %>
	<p>
		<%= link_to "Agregar Dimension", new_admin_product_product_dimension_path(@product)	%>
	</p>
	<p>
		<%= link_to "Nuevo Producto", new_admin_product_path %>
	</p>
