<div class="container">
	<ul class="nav nav-tabs" role="tablist">
	  <li class="nav-item">
	    <a class="nav-link active" data-toggle="tab" href="#main" role="tab">Datos Principales</a>
	  </li>
	  <li class="nav-item">
	    <a class="nav-link" data-toggle="tab" href="#dimensions" role="tab">Medidas Disponibles</a>
	  </li>
	  <li class="nav-item">
	    <a class="nav-link" data-toggle="tab" href="#gallery" role="tab">Imagenes</a>
	  </li>
	</ul>
	
	<div class="tab-content">
	  <div class="tab-pane active" id="main" role="tabpanel">
		  <h1>Detalles Producto	</h1>
		  <div class="row">
			  <div class="col-xl-4 col-lg-4">
				  <% unless @product.product_picture.file==nil %>
				  <%= image_tag(@product.product_picture.url, width: 400)%>
				  <% end %>
			  </div>
			  <div class="col-xl-8 col-lg-8">
				  <dl class="dl-horizontal">
					  <dt>Nombre Producto </dt>		<dd><%= @product.name				%>	</dd>
					  <dt>Marca			</dt>		<dd><%= @product.supplier.name		%>	</dd>
					  <dt>Categoria		</dt>		<dd><%= @product.product_category.try(:name) 	%>	</dd>
					  <dt>Subcategoria	</dt>		<dd><%= @product.product_subcategory.try(:name)	%>	</dd>
					  <dt>Descripci√≥n		</dt>		<dd><%= @product.description			%>	</dd>
				  </dl>
			  </div>
		  </div>
		  <p>
			  <%= link_to "Modificar",edit_admin_product_path(@product)	%>	| 
			  <%= link_to("Eliminar", admin_product_path(@product), method: :delete)%>
		  </p>				
	  </div>
	  <div class="tab-pane" id="dimensions" role="tabpanel">
		  <%= render partial: 'product_dimensions' %>
	  </div>
	  <div class="tab-pane" id="gallery" role="tabpanel">
		  <p>this is gallery</p>
	  </div>
	</div>
	
	<%= link_to "Regresar", lookup_admin_products_path %>
</div>

<div id="dimension_modal" class="modal fade" role="dialog">
	
</div>
	
<!-- Modal -->
<div id="addProductPhotograph" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Agregar Imagen de Producto </h4>
			</div>
			<div class="modal-body">
				<%= form_for [:admin, @product, @product_photo], remote: true, html: {class: "form-inline",  multipart: true} do |form| %>
				<div class="form-group">
					<%= form.label "Archivo Imagen"								%>
					<%= form.file_field	:product_picture, class: "form-control"	%>
					<button type="submit" class="btn btn-default">Cargar Archivo</button>
				</div>	
				<% end %>
			</div>
		</div>
	</div>
</div>

