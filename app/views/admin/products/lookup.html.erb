<div class="row">
  <div class="col-9">
    <h1>Productos</h1>
  </div>
  <div class="col-3">
    <%= link_to "Agregar", new_admin_product_path, remote: true, class: "btn btn-primary pull-right"	%>
  </div>
</div>

<p>Seleccione el criterio que desea para filtrar los resultados </p>
<%= form_for :product, url: search_admin_products_path, remote: true, html: {class: "form-inline"} do |form| %>
	<%= form.label "Marca", class: "col-1 form-control-label"	%>	
	<%= form.select :supplier_id, @suppliers.collect {|s| [s.name, s.id]}, {include_blank: true}, {class: "form-control mb-2 mr-sm-2 mb-sm-0", placeholder: "Marca"}	%>
	<%= form.label "Categoria", class: "col-1 form-control-label"	%>	
	<%= form.select :product_category_id, @product_categories.collect {|pc| [pc.name, pc.id]}, {include_blank: true}, {class: "form-control"}	%>
	<%= form.label "Nombre", class: "col-1 form-control-label" %>	
	<%= form.select :id, @all_products.collect {|prod| [prod.name, prod.id]}, {include_blank: true}, {class: "form-control chosen-select"} %>
	<%= submit_tag "Buscar", {class: "btn btn-primary"}	%>
  <% end %>
<br><br>
<hr>
<br>
<div id="search_results">
</div>
<br><br>
<hr>
<br>
<%= link_to "Crear Nuevo Producto", new_admin_product_path	%>
<script type="text/javascript">
	$("#product_id").chosen({search_containes: true})
</script>
