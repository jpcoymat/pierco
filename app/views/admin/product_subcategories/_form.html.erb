<div id="error_explanation"></div>
<%= form_for [:admin, @product_category, @product_subcategory], html: {class: "form-horizontal"}, remote: true do |form|	%>
<%= form.hidden_field :product_category_id, value: @product_category.id	%>
<div class="form-group row">
  <%= form.label "Nombre", class: "col-sm-4 control-label" %>
  <div class="col-sm-6">
    <%= form.text_field	:name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Descripcion", class: "col-sm-4 control-label" %>
  <div class="col-sm-6">
    <%= form.text_field	:description , class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= form.label "Orden", class: "col-sm-4 control-label" %>
  <div class="col-sm-6">
    <%= form.text_field :display_priority, class: "form-control" %>
  </div>
</div>
<%= submit_tag "Actualizar",  {class: "btn btn-primary"}		%>
<% end %>

