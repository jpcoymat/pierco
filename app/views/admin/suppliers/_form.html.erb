<div id="error_explanation">
</div>

<%= form_for [:admin, @supplier], html: {class: "form-horizontal", multipart: true}, remote: true do |form|	%>
  <%= form.hidden_field :company_id, value: User.find(session[:user_id]).company.id	%>
  <div class="form-group row">
    <%= form.label "Nombre", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field	:name, class: "form-control"		%>
    </div>
  </div> 
  <div class="form-group row">
    <%= form.label "Direccion" , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= form.text_field :address_1, class: "form-control"	%>	
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Direccion 2" , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">	
      <%= form.text_field	:address_2, class: "form-control"	%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Ciudad" , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">		
      <%= form.text_field	:city, class: "form-control"		%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Departamento/Estado" , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= form.text_field :state, class: "form-control"		%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Codigo Postal", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :postal_code, class: "form-control"	%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Pais" , class: "col-sm-2 control-label"%>		
    <div class="col-sm-10">
      <%= form.text_field :country, class: "form-control"	%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Telefono", class: "col-sm-2 control-label" %>	
    <div class="col-sm-10">
      <%= form.text_field	:telephone, class: "form-control"	%>	
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Website" , class: "col-sm-2 control-label"%>
    <div class="col-sm-10">		
      <%= form.text_field	:website, class: "form-control"	%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label "Logo" , class: "col-sm-2 control-label"%>		
    <div class="col-sm-10">
      <%= form.file_field	:supplier_picture	, class: "form-control" %>
    </div>
  </div>
  <%= submit_tag "Crear Marca", {class: "btn btn-primary"}	%>
<% end %>