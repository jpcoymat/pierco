<h1>Nueva Dimension de Producto </h1>
	<p>Nombre de Producto: <%= @product.name	%></p>
	
	<% if @product_dimension.errors.any? %>
		<div id="error_explanation">
			<h2>Hay <%= @product_dimension.errors.count.to_s %> error(es) con esta dimension :</h2>

			<ul>
				<% @product_dimension.errors.each do |key,value| %>
	  				<li><%= value %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	
	
	<%= form_for :product_dimension, :url => {:controller => 'admin', :action => 'create_product_dimension'} do |form| %>
		<%= form.hidden_field	:product_id, :value => @product.id				%>
		<%= render :partial => 'product_dimension', :locals => {:form => form}	%>
		<%= submit_tag "Crear Dimension"	%>
	<% end %>
	