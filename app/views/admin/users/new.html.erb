<h2>Crear Nuevo Usuario</h2>

<%= form_for [:admin. @user] do |form| %>
<%= form.hidden_field :company_id, value: @company.id %>
<%= render partial: 'user', locals: {form: form} %>
<table>
<tr><td><%= form.label :password, "Contrase&ntilde;a".html_safe %></td><td><%= form.password_field :password %></td></tr>
<tr><td><%= form.label :password_confirmation, "Confirmar Contrase&ntilde;a".html_safe %></td><td><%= form.password_field :password_confirmation %></td></tr>
</table>
<%= submit_tag "Crear Usuario"
<% end %>
