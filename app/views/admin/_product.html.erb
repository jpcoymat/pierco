<table>
		<tr><td>Nombre			</td>	<td><%= form.text_field :name												%>	</td></tr>
		<tr><td>Marca			</td>	<td><%= form.select :supplier_id, User.find(session[:user_id]).company.suppliers.collect {|s| [s.name,s.id]}	%>	</td></tr>
		<tr><td>Categoria		</td>	<td><%= form.select :product_category_id, User.find(session[:user_id]).company.product_categories.collect {|pc| [pc.name, pc.id]}, :include_blank => true		%>	</td></tr>
		<tr><td>Subcategoria	</td>	<td><%= form.select :product_subcategory_id, User.find(session[:user_id]).company.product_subcategories.collect {|ps| [ps.name,ps.id]}, :include_blank=> true	%>	</td></tr>
		<tr><td>Imagen			</td>	<td><%= form.file_field	:image_file											%>	</td></tr>
		<tr><td>Descripcion		</td>	<td><%= form.text_area :description, :cols => 40, :rows => 5				%>	</td></tr>
		<tr><td>Activo?			</td>	<td><%= form.check_box :active												%>	</td></tr>
</table>